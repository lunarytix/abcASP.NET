@model Empleado.Models.Empleados 


<h2> Save</h2>
@using (Html.BeginForm("save", "home", FormMethod.Post, new { id = "popupForm" }))
{
    if (Model != null && Model.Clave_Emp > 0)
    {
        @Html.HiddenFor(a => a.Clave_Emp)

    }

    <div class="form-group">
        <label>Nombre :</label>
        @Html.TextBoxFor(a => a.Nombre, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Nombre)

    </div>
    <div class="form-group">
        <label>Apellido Paterno :</label>
        @Html.TextBoxFor(a => a.ApPaterno, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.ApPaterno)

    </div>
    <div class="form-group">
        <label>Apellido Materno :</label>
        @Html.TextBoxFor(a => a.ApMaterno, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.ApMaterno)

    </div>
    <div class="form-group">
        <label>Fecha Naciminto :</label>
        @Html.TextBoxFor(model => model.FecNac, new { type = "date", @class = "form-control" })
        @*@Html.TextBoxFor(a => a.FecNac, new { @class = "form-control" })*@
        @Html.ValidationMessageFor(a => a.FecNac)

    </div>
    <div class="form-group">
        <label>Departamento :</label>
        @*@Html.TextBoxFor(a => a.Departamento, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Departamento)*@
        
        @Html.DropDownListFor(a => a.Departamento, new SelectList(Model.EmpleadosDepartamentos, "Departamento", "Descripcion"), "Select")
    
    </div>
    <div class="form-group">
        <label>Sueldo :</label>
        @Html.TextAreaFor(a => a.sueldo, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.sueldo)

    </div>
    <div>
        <input type="submit" value="Save" />
    </div>

}
